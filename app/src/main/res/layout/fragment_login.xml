<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/fragment_login_main_img"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_150sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:src="@drawable/car_img" />

            <EditText
                android:id="@+id/fragment_login_username_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/white_solid_prim_stroke"
                android:drawableEnd="@drawable/ic_baseline_gray_email_24"
                android:drawableRight="@drawable/ic_baseline_gray_email_24"
                android:drawablePadding="@dimen/_5sdp"
                android:fontFamily="@font/cairo_regular"
                android:hint="@string/username"
                android:imeOptions="actionNext"
                android:padding="@dimen/_10sdp"
                android:singleLine="true"
                android:textColor="@color/purple_500"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/fragment_login_password_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/white_solid_prim_stroke"
                android:drawableEnd="@drawable/ic_baseline_gray_password_24"
                android:drawableRight="@drawable/ic_baseline_gray_password_24"
                android:drawablePadding="@dimen/_5sdp"
                android:fontFamily="@font/cairo_regular"
                android:hint="@string/password"
                android:inputType="textWebPassword"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/purple_500"
                android:textSize="20sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/fragment_login_login_btn"
                style="@style/Bold_White_Color_TextView_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_30sdp"
                android:backgroundTint="@color/purple_500"
                android:padding="@dimen/_5sdp"
                android:text="@string/login"
                android:textSize="20sp"
                app:cornerRadius="10dp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

